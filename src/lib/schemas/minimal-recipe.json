{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "image": {
            "items": {
                "anyOf": [
                    {
                        "properties": {
                            "url": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "url"
                        ],
                        "type": "object"
                    },
                    {
                        "type": "string"
                    }
                ]
            },
            "type": "array"
        },
        "name": {
            "type": "string"
        },
        "recipeIngredient": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "recipeInstructions": {
            "items": {
                "properties": {
                    "text": {
                        "type": "string"
                    }
                },
                "required": [
                    "text"
                ],
                "type": "object"
            },
            "type": "array"
        }
    },
    "required": [
        "image",
        "name",
        "recipeIngredient",
        "recipeInstructions"
    ],
    "type": "object"
}

